generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DayType {
  TRAINING
  REST
}

enum EffortLevel {
  EASY
  NORMAL
  HARD
  FAILED
  SKIPPED
}

model DaySelection {
  id        String   @id @default(cuid())
  clientId  String
  date      DateTime
  dayType   DayType
  changedAt DateTime @default(now())
}

model MealLog {
  id         String   @id @default(cuid())
  clientId   String
  date       DateTime
  dayType    DayType
  calories   Int
  protein    Int
  carbs      Int
  fat        Int
  description String?
  matchedMenuItemId String?
  loggedAt   DateTime @default(now())
}

model WorkoutLog {
  id            String       @id @default(cuid())
  clientId      String
  date          DateTime
  workoutType   String       // A / B / FBW / Upper / Lower / וכו'
  notes         String?
  loggedAt      DateTime     @default(now())
  exercises     WorkoutExerciseLog[]
}

model MetricsLog {
  id          String   @id @default(cuid())
  clientId    String
  date        DateTime 
  steps       Int?     @default(0)
  waterLiters Float?   @default(0)
  sleepHours  Float?
  notes       String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@unique([clientId, date])
  @@index([clientId, date])
}
model WorkoutExerciseLog {
  id            String     @id @default(cuid())

  workoutLogId  String
  exerciseName  String     // ← במקום exerciseId !
  weight        Float?     // ← משקל יחיד
  notes         String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  workoutLog    WorkoutLog @relation(fields: [workoutLogId], references: [id], onDelete: Cascade)
}


model WeightLog {
  id        String   @id @default(cuid())
  clientId  String
  date      DateTime
  weightKg  Float
  notes     String?
  loggedAt  DateTime @default(now())
}

// optional logs for pino
model LogEntry {
  id        String   @id @default(cuid())
  level     String
  method    String
  path      String
  status    Int
  userId    String?
  ip        String?
  userAgent String?
  message   String
  meta      Json?

  createdAt DateTime @default(now())
}