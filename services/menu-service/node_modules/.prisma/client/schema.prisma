// Prisma schema for menu-service

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum DayType {
  TRAINING
  REST
}

enum MealSlot {
  MEAL1
  MEAL2
  MEAL3
  CARB_LOAD
}

enum MealTemplateKind {
  MEAT_MEAL
  DAIRY_MEAL
  FREE_CALORIES
  CARB_LOAD
}

enum MealItemRole {
  PROTEIN
  CARB
  FREE
  HEALTH
  MENTAL_HEALTH
}

// ==================== Food master data ====================

model FoodItem {
  id              String  @id @default(cuid())
  name            String
  description     String?
  category        String?
  caloriesPer100g Float?
  proteinPer100g  Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mealTemplateItem    MealTemplateItem[]
  clientMenuMealItems ClientMenuMealItem[]
}

model VitaminMaster {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  templateVitamins   TemplateMenuVitamin[] @relation("VitaminTemplateRelation")
  clientMenuVitamins ClientMenuVitamin[]   @relation("VitaminClientRelation")
}

// ==================== Meal templates ====================

model MealTemplate {
  id      String           @id @default(cuid())
  name    String
  kind    MealTemplateKind
  coachId String

  totalCalories Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items           MealTemplateItem[]
  clientMenuMeals ClientMenuMeal[]

  templateMealOptions TemplateMenuMealOption[] @relation("TemplateOptionsRelation")
  clientMealOptions   ClientMenuMealOption[]   @relation("ClientOptionsRelation")
}

model MealTemplateItem {
  id              String       @id @default(cuid())
  foodItemId      String
  mealTemplateId  String
  role            MealItemRole
  defaultGrams    Float        @default(100)
  defaultCalories Float?
  notes           String?

  createdAt DateTime @default(now())

  foodItem     FoodItem     @relation(fields: [foodItemId], references: [id], onDelete: Restrict)
  mealTemplate MealTemplate @relation(fields: [mealTemplateId], references: [id], onDelete: Cascade)

  @@index([mealTemplateId])
  @@index([foodItemId])
}

// ==================== TEMPLATE MENUS ====================

model TemplateMenu {
  id            String  @id @default(cuid())
  coachId       String
  name          String
  dayType       DayType
  notes         String?
  totalCalories Float   @default(0)

  meals    TemplateMenuMeal[]
  vitamins TemplateMenuVitamin[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientMenus ClientMenu[]
}

model TemplateMenuMeal {
  id               String  @id @default(cuid())
  templateMenuId   String
  name             String
  selectedOptionId String?
  totalCalories    Float?

  options TemplateMenuMealOption[]

  templateMenu TemplateMenu @relation(fields: [templateMenuId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([templateMenuId])
}

model TemplateMenuMealOption {
  id             String  @id @default(cuid())
  mealId         String
  mealTemplateId String
  name           String?
  orderIndex     Int     @default(0)

  meal TemplateMenuMeal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  mealTemplate MealTemplate @relation("TemplateOptionsRelation", fields: [mealTemplateId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mealId])
}

model TemplateMenuVitamin {
  id             String @id @default(cuid())
  templateMenuId String

  vitaminId   String?
  name        String
  description String?

  templateMenu TemplateMenu   @relation(fields: [templateMenuId], references: [id], onDelete: Cascade)
  vitamin      VitaminMaster? @relation("VitaminTemplateRelation", fields: [vitaminId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([templateMenuId])
  @@index([vitaminId])
}

// ==================== CLIENT MENUS ====================

model ClientMenu {
  id            String    @id @default(cuid())
  clientId      String
  coachId       String
  name          String
  type          DayType
  totalCalories Float     @default(0)
  notes         String?
  isActive      Boolean   @default(true)
  startDate     DateTime?
  endDate       DateTime?

  originalTemplateMenuId String?
  originalTemplateMenu   TemplateMenu? @relation(fields: [originalTemplateMenuId], references: [id])

  meals    ClientMenuMeal[]
  vitamins ClientMenuVitamin[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId, isActive])
  @@index([coachId])
  @@index([originalTemplateMenuId])
}

model ClientMenuMeal {
  id                 String  @id @default(cuid())
  clientMenuId       String
  originalTemplateId String?

  name             String
  totalCalories    Float   @default(0)
  selectedOptionId String?

  clientMenu       ClientMenu    @relation(fields: [clientMenuId], references: [id], onDelete: Cascade)
  originalTemplate MealTemplate? @relation(fields: [originalTemplateId], references: [id])

  items   ClientMenuMealItem[]
  options ClientMenuMealOption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientMenuId])
  @@index([originalTemplateId])
}

model ClientMenuMealOption {
  id               String  @id @default(cuid())
  clientMenuMealId String
  mealTemplateId   String
  name             String?
  orderIndex       Int     @default(0)

  clientMenuMeal ClientMenuMeal @relation(fields: [clientMenuMealId], references: [id], onDelete: Cascade)

  mealTemplate MealTemplate @relation("ClientOptionsRelation", fields: [mealTemplateId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientMenuMealId])
}

model ClientMenuMealItem {
  id               String @id @default(cuid())
  clientMenuMealId String
  foodItemId       String

  quantity Float
  calories Float
  notes    String?

  clientMenuMeal ClientMenuMeal @relation(fields: [clientMenuMealId], references: [id], onDelete: Cascade)
  foodItem       FoodItem       @relation(fields: [foodItemId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientMenuMealId])
  @@index([foodItemId])
}

model ClientMenuVitamin {
  id           String  @id @default(cuid())
  clientMenuId String
  vitaminId    String?

  name        String
  description String?

  clientMenu ClientMenu     @relation(fields: [clientMenuId], references: [id], onDelete: Cascade)
  vitamin    VitaminMaster? @relation("VitaminClientRelation", fields: [vitaminId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientMenuId])
  @@index([vitaminId])
}
